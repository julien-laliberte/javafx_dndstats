        <HBox spacing="5">
            <Label text="Nom" minWidth="100"/>
            <TextField fx:id="characterFirstName" promptText="Dursahn" minWidth="250"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Nom" minWidth="100"/>
            <TextField fx:id="characterLastName" promptText="Frey" minWidth="250"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Classe" minWidth="100"/>
            <TextField fx:id="characterClass" promptText="Paladin" minWidth="250"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Sous classe" minWidth="100"/>
            <TextField fx:id="characterSubclass" promptText="Oath of the Raven Queen" minWidth="250"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Niveau" minWidth="100"/>
            <TextField fx:id="characterClassLevel" promptText="5" minWidth="250"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Classe" minWidth="100"/>
            <TextField fx:id="characterClass2" promptText="Warlock" minWidth="250"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Sous classe" minWidth="100"/>
            <TextField fx:id="characterSubclass2" promptText="Hexblade" minWidth="250"/>
