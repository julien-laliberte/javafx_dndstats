<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dursahn.dndstats.controllers.ViewCharacterController"
      prefHeight="350.0" prefWidth="375.0"
      spacing="5" alignment="TOP_CENTER">

    <!-- Dialog Title -->
    <Label text="Character edit" styleClass="dialog-title" />
